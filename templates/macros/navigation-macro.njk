			<li class="{%if currentPage == 'experience' %} current {% endif %}">
				<a href="/experience"
					><span class="fas fa-laptop-code" aria-hidden="true"></span> Experience</a
				>
			</li>
			<li class="{%if currentPage == 'projects' %} current {% endif %}">
				<a href="/projects"
					><span class="fas fa-code" aria-hidden="true"></span> Projects</a
				>
			</li>
			<li class="{%if currentPage == 'education' %} current {% endif %}">
